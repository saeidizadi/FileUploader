@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form id="account" method="post" enctype="multipart/form-data">
    <div class="row mb-3">      
        <div class="col-lg-6 col-md-6 col-12">
            <label asp-for="FormFile">image</label> 
            <input type="file" name="FormFile" id="FormFile" class="form-control" />
        </div> 
        <div class="col-lg-4 col-md-4 col-12 m-auto text-end">
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit" title="save">save</button>
            </div>
        </div> 
    </div>
</form>